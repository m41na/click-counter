{
  "name": "click-counter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "server"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start:server": "set PORT=5000 && npm start -w server",
    "debug:server": "set PORT=5000 && set DEBUG=click-counter-server:* && npm run watch -w server",
    "start:dev": "concurrently \"npm run dev\" \"npm run debug:server\"",
    "test:all": "npm test && npm test && npm test -w server -- --watchAll=false",
    "test": "vitest run .",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "socket.io-client": "^4.7.5"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.2.0",
    "@testing-library/react": "^16.0.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "jsdom": "^24.1.0",
    "nodemon": "^3.1.4",
    "vite": "^5.3.1",
    "vitest": "^1.6.0"
  }
}
